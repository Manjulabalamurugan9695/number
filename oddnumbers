<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Odd Numbers</title>
</head>
<body>
    <div id="oddNumberList"></div>

    <script>
        
        const oddNumberListDiv = document.getElementById('oddNumberList');

        for (let i = 1; i <= 100; i++) {
            if (i % 2 !== 0) {
                const p = document.createElement('p');
                p.textContent = i;
                oddNumberListDiv.appendChild(p);
            }
        }
    </script>
</body>
</html>
